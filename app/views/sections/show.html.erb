<div class="page-header">
  <%= link_to sections_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_section_path(@section), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show section</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @section.name %></dd>

  <dt>Group:</dt>
  <dd><%= @section.group %></dd>

  <dt>Percentage:</dt>
  <dd><%= @section.percentage %></dd>

  <dt>Total percentage:</dt>
  <dd><%= @section.total_percentage %></dd>

</dl>
